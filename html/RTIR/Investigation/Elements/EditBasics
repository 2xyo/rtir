<table border=0 cellspacing=2 cellpadding=0>
  <tr>
    <td class=label>
      <%loc("Incident")%>:
    </td>
    <td class=value>
      <& /RTIR/Elements/ShowIncidents, Ticket => $Ticket &>
    </td>
  </tr>
  <tr>
    <td class=label>
      <%loc("State")%>:
    </td>
    <td class=value>
      <& /RTIR/Elements/ShowRTIRField, Ticket => $Ticket, Name => 'State' &>
    </td>
  </tr>
  <& /Elements/ShadedInputRow,
	title => loc('Time Worked'),
	name => "TimeWorked",
	content => $Ticket->TimeWorked,
	size => 5 &>
  <tr>
      <td class="label">
        <&|/l&>Owner</&>:
      </td>
      <td class="value">
        <& /Elements/SelectOwner, Name => 'Owner', QueueObj => $Ticket->QueueObj, TicketObj => $Ticket, Default => $Ticket->OwnerObj->Id &>
      </td>
    </tr>
  <tr>
    <td colspan=2>
      <& /Ticket/Elements/EditCustomFields, TicketObj => $Ticket, QueueObj => $Ticket->QueueObj &>
    </td>
  </tr>
</table>

<%INIT>
my $TimeWorked = $Ticket->TimeWorked;
if ($Ticket->TimeLeft > 0 ) {
  $TimeWorked = $Ticket->TimeWorked."/".$Ticket->TimeLeft;
}
</%INIT>

<%ARGS>
$Ticket => undef
</%ARGS>