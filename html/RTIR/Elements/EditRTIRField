% if (defined $CustomField) {
<input type=hidden name=<%$Name%> value=<%$NamePrefix%><%$CustomField->id%>-Values>
<& /Ticket/Elements/EditCustomField, TicketObj => $TicketObj, 
    CustomField => $CustomField, 
    NamePrefix => $NamePrefix,
    Default => $Default,
    Cols => $Cols &>
% }

<%INIT>
my $CustomFields;
my $CustomField;
my $Values;
my $NamePrefix;

if (defined $TicketObj) {
  $CustomFields = $TicketObj->QueueObj->CustomFields();
  $NamePrefix = "Ticket-".$TicketObj->Id."-CustomField-";
} else {
  $CustomFields = $QueueObj->CustomFields();
  $NamePrefix = "CustomField-";
}
$CustomFields->{'find_disabled_rows'} = 1;

while (my $cf = $CustomFields->Next()) {
  if ((index($cf->Name, "_RTIR_".$Name) eq 0)) {
    $CustomField = $cf;
    if ($TicketObj) {
      $Values = $TicketObj->CustomFieldValues($CustomField->id);
    }
  }
}
</%INIT>
<%ARGS>
$TicketObj => undef
$QueueObj => undef
$Name => undef
$Cols => undef
$Default => undef
</%ARGS>
