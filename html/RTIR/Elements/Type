<%ONCE>
my %type = (
    'Incidents'        => 'Incident',
    'Incident Reports' => 'Report',
    'Investigations'   => 'Investigation',
    'Blocks'           => 'Block',
);
</%ONCE>
<%INIT>

unless( $Queue ) {
    $TicketObj = LoadTicket($Ticket) if $Ticket && !$TicketObj;
    if( $TicketObj ) {
        $Queue = $TicketObj->QueueObj->Name;
    }
}

my $type = $type{$Queue} || '';
my @states = $m->comp("/RTIR/Elements/States", Queue => $Queue);
return ($type, @states);

</%INIT>

<%ARGS>
$Ticket => undef
$TicketObj => undef
$Queue => undef
</%ARGS>
