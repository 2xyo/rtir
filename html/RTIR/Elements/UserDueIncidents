<& /RTIR/Elements/DueIncidents, %ARGS, Title => $Title, Query => $Query &>
<%INIT>
my $Title = loc( "Most due incidents owned by [_1]", $Owner->Name );
$Query ||= RT::IR->NewQuery( Queue => 'Incidents', And => 'Owner.id = '. $Owner->id );
</%INIT>
<%ARGS>
$Owner => $session{'CurrentUser'}
$Query => undef
</%ARGS>
