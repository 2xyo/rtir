CLASS="evenline"
% }
>
% my $checkval;
% if (defined $check) {
%   if ($check eq "check") {
%     $checkval = "CHECKED";
%   }
<TD rowspan=2><input type=checkbox name="UpdateTicket<%$Ticket->Id%>" <%$checkval%>></TD>
% } elsif ($check eq "radio") {
<TD rowspan=2><input type=radio name="SelectedTicket" value="<%$Ticket->Id%>"></TD>
% }
<TD ROWSPAN="2"><B><A HREF="<%$RT::WebPath%>/RTIR/Display.html?id=<%$Ticket->Id%>"><%$Ticket->id%></a></B></TD>
<TD><B><A HREF="<%$RT::WebPath%>/RTIR/Display.html?id=<%$Ticket->Id%>"><%$Ticket->Subject%></a></B></TD>
<TD>
  <& "/RTIR/Elements/ShowRTIRField", Ticket => $Ticket, Name => 'State' &>
</TD>
<TD><SMALL><%$Ticket->LastUpdatedObj->AgeAsString || '-'%></SMALL></TD>
<TD><SMALL><%$Ticket->CreatedObj->AgeAsString || '-'%></SMALL></TD>
% if ($Type eq "Incident") {
<TD><%$Ticket->Priority%></TD>
% } else {
<TD>N/A</TD>
% }
</TR>
<TR
% if ($i%2) {
CLASS="oddline"
% } else {
CLASS="evenline"
% }
>
