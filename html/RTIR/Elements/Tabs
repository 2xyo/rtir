<& /Elements/PageLayout, 
    toptabs => $toptabs, 
    topactions => $topactions,
    tabs => $tabs, 
    actions => $actions, 
    current_tab => $current_tab, 
    current_toptab => $current_toptab,
    Title => $Title &>

<%INIT>
my $incidentq = RT::Queue->new($session{'CurrentUser'});
$incidentq->Load('Incidents');

my $investigationq = RT::Queue->new($session{'CurrentUser'});
$investigationq->Load('Investigations');

my $reportsq = RT::Queue->new($session{'CurrentUser'});
$reportsq->Load('Incident Reports');

my $blocksq = RT::Queue->new($session{'CurrentUser'});
$blocksq->Load('Blocks');

my $toptabs = { A => { title => loc('RT'),
                       path  => '', },
		    B => { title => loc('RTIR Home'),
                           path => 'RTIR/index.html',
                         },
                    C => { title => loc('Incidents'),
                        path => 'RTIR/Incident/Listing.html?NewSearch=1&QueueOp==&ValueOfQueue='.$incidentq->Id
                      },
                    D => { title => loc('Incident Reports'),
                        path => 'RTIR/Report/Listing.html?NewSearch=1&QueueOp==&ValueOfQueue='.$reportsq->Id,
                      },
                    E => { title => loc('Investigations'),
                        path => 'RTIR/Investigation/Listing.html?NewSearch=1&QueueOp==&ValueOfQueue='.$investigationq->Id,
                      },
                    F => { title => loc('Blocks'),
                        path => 'RTIR/Block/Listing.html?NewSearch=1&QueueOp==&ValueOfQueue='.$blocksq->Id,
                      },
                    ZZ => { title => loc('Preferences'),
                        path => 'RTIR/User/Prefs.html'
                      },
                 };
my $topactions = {
	A => { html => $m->scomp('/RTIR/Elements/CreateIncident')	
		},
	B => { html => $m->scomp('/RTIR/Elements/CreateReport')	
		},
	C => { html => $m->scomp('/Elements/SimpleSearch') 
		}
	};
                    
</%INIT>
<%ARGS>
$current_toptab => undef
$current_tab => undef
$current_subtab => undef
$tabs => undef
$actions => undef
$Title => undef
</%ARGS>
