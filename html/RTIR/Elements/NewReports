<&| /Widgets/TitleBox, 
    title_href      => RT->Config->Get('WebPath') ."/RTIR/Search/Results.html?$QueryString",
    title_class     => 'inverse',
    title           => $title,
    titleright      => loc("Bulk Reject"),
    titleright_href => RT->Config->Get('WebPath') ."/RTIR/Report/BulkReject.html?$BulkQS",
    bodyclass       => '',
&>

<& /RTIR/Search/Elements/ShowResults,
    Queue        => $Queue,
    BaseQuery    => $BaseQuery,
    Query        => $Query,
    Format       => $Format,
    Rows         => $Rows,
    Page         => $Page,
    OrderBy      => $OrderBy,
    Order        => $Order,
    AllowSorting => 0,
&>
</&>

<%INIT>
my $title = loc("New unlinked Incident Reports...");

unless( $Query ) {
    $Query = RT::IR->NewQuery( Queue => $Queue, states => [ 'new' ] );
    $Query = join ' AND ', $Query, 'MemberOf IS NULL';
}

my $QueryString = $m->comp('/Elements/QueryString',
    Queue   => $Queue,
    Query   => $Query,
    Format  => $Format,
    Rows    => $Rows,
    Page    => $Page,
    OrderBy => $OrderBy,
    Order   => $Order,
);

my $BulkQS = $m->comp('/Elements/QueryString',
    Queue   => $Queue,
    Query   => $Query,
    OrderBy => $OrderBy,
    Order   => $Order,
);

</%INIT>

<%ARGS>
$Queue     => 'Incident Reports'
$BaseQuery => RT::IR->BaseQuery( Queue => $Queue )
$Query     => undef
$Format    => RT->Config->Get('RTIRSearchResultFormats')->{'NewReports'}
$Rows      => RT->Config->Get('DefaultSummaryRows', $session{'CurrentUser'})
$Page      => 1
$OrderBy   => 'Due'
$Order     => 'ASC'
</%ARGS>
