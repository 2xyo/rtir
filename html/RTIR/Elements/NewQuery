<%INIT>
@states = grep $_, @states;
unless( @states ) {
    @states = RT::IR::States( %ARGS );
}

my %seen = ();
@states =  grep !$seen{$_}++, map lc, grep $_, @states, @add_states;

my $query = join " OR ",
            map "'CF.{_RTIR_State}' = '$_'",
            @states;
$query = "( $query )" if $query;
return $query;

</%INIT>
<%ARGS>
$Queue => undef
@states => ()
@add_states => ()
</%ARGS>
