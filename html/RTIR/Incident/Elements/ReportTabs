% if (defined $Ticket) {
<& /RTIR/Incident/Elements/Tabs, 
    Ticket => $Ticket, 
    current_tab => 'RTIR/Incident/Display.html?id='.$Ticket->id,
    current_subtab => 'RTIR/Incident/ShowReports.html?id='.$Ticket->id,
