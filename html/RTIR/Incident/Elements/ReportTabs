<%INIT>
  my $q = RT::Queue->new($session{'CurrentUser'});
  $q->Load("Incident Reports");

my $subtabs;
if ($Ticket) {
  $subtabs = {
    _A => { path => 'RTIR/Report/Create.html?Incident='.$Ticket->id,
            title     => loc('New Incident Report') },
    _B => { path => 'RTIR/Incident/AssociateReports.html?QueueOp==&ValueOfQueue='.$q->Id.'&ClearRestrictions=1&Incident='.$Ticket->id.'&StatusOp==&ValueOfStatus=new',
            title     => loc('Link Incident Reports') },
    };
}

</%INIT>

<%ARGS>
$Ticket => undef
$current_tab => undef
$current_subtab => undef
$Title => undef
</%ARGS>

