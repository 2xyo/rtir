<& /RTIR/Elements/TicketHeader, check => "check", %ARGS &>
% my $i;
%while (my $Ticket = $session{'tickets'}->Next) {
% $i++;
<& /RTIR/Common/Elements/TicketRow, Type => $Type, Ticket => $Ticket, i=> $i, check => "check", %ARGS &>
% }
</TABLE>
<div align=center>
