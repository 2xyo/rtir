<& /RTIR/Incident/Elements/Tabs, 
    Ticket => $Ticket, 
    current_tab => 'RTIR/Incident/ShowInvestigations.html?id='.$Ticket->id,
    current_subtab => $current_subtab,
    subtabs => $subtabs,
    Title => $Title &>

<%INIT>
  my $q = RT::Queue->new($session{'CurrentUser'});
  $q->Load('Investigations');

  my $subtabs = {
    _A => { path => 'RTIR/Investigation/Create.html?Incident='.$Ticket->id,
            title     => loc('Launch Investigation') },
    _B => { path => 'RTIR/Incident/AssociateInvestigations.html?QueueOp==&ValueOfQueue='.$q->Id.'&ClearRestrictions=1&Incident='.$Ticket->id,
            title     => loc('Associate Investigation') },
    };

</%INIT>

<%ARGS>
$Ticket => undef
$current_tab => undef
$current_subtab => undef
$Title => undef
$queue => undef
</%ARGS>

