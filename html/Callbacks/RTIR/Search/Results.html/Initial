<%ARGS>
$ARGSRef => {}
</%ARGS>
<%INIT>
my ($our, @queues) = RT::IR->OurQuery( $ARGSRef->{'Query'} );
return unless $our;

RT::Interface::Web::Redirect(
    RT->Config->Get('WebURL')
    .'RTIR/Search/Results.html?'
    . $m->comp(
        '/Elements/QueryString',
        %$ARGSRef,
        @queues == 1? (Queue => $queues[0]) : (Queue => undef)
    )
);
</%INIT>