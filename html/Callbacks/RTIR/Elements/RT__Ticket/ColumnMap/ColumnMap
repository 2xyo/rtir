<%INIT>
    $COLUMN_MAP->{'_RTIR_Check'} = {
        title     => 'Check',
	value => sub { return '<input type="checkbox" name="UpdateTicket' . $_[0]->id . '">' },
    };

    $COLUMN_MAP->{'_RTIR_Radio'} = {
        title     => 'Radio',
	value => sub { return '<input type="radio" name="SelectedTicket" value="' . $_[0]->id . '">' },
    };
</%INIT>

<%ARGS>
$COLUMN_MAP => undef
$id => undef
</%ARGS>
